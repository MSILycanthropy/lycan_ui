<% id = local_assigns[:id] || use_id %>
<% data = data_attributes({
  data: {
    controller: "ui--accordion",
    action:  "ui--accordion--item:opened->ui--accordion#closeOthers keydown.up->ui--accordion#focusPrevious " \
              "keydown.down->ui--accordion#focusNext keydown.home->ui--accordion#focusFirst keydown.end->ui--accordion#focusLast",
    ui__accordion_multiple_value: local_assigns[:multiple],
    ui__accordion_ui__accordion__item_outlet: "##{id} > [data-controller='ui--accordion--item']"
    }
  }, local_assigns) %>

<%= tag.div(class: local_assigns[:class], id:, data:, **local_assigns.except(:classes, :data, :multiple)) do %>
  <%= yield %>
<% end %>
