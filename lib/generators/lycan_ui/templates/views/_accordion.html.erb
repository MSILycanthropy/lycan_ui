<% @current_name = local_assigns.delete(:name) || use_id if local_assigns.delete(:multiple).blank?  %>
<% data = data_attributes({
  data: {
    controller: "accordion",
    action:  "keydown.up->accordion#focusPrevious keydown.down->accordion#focusNext " \
              "keydown.home->accordion#focusFirst keydown.end->accordion#focusLast",
    }
  }, local_assigns) %>

<%= tag.div(class: local_assigns.delete(:class), data:, **local_assigns.except(:data)) do %>
  <%= yield %>
<% end %>
