<% default_classes = "text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" %>
<% local_assigns[:class] = class_names(default_classes, local_assigns[:class]) %>

<%= label *args, **local_assigns.except(:args) do |builder| %>
  <% if args.third.is_a?(String) %>
    <%= args.third %>
  <% else %>
    <% content = yield builder %>

    <% if content.blank? %>
      <%= builder.translation %>
    <% else %>
      <%= content %>
    <% end %>
  <% end %>
<% end %>
