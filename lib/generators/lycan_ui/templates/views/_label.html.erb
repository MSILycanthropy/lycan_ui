<% default_classes = "text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" %>
<% html_options = args.third.is_a?(Hash) ? args.third : args.fourth %>
<% html_options[:class] = class_names(default_classes, html_options[:class]) %>
<% block = yield "" %>

<% if args.third.nil? && !block.blank? %>
  <%= label *args do |translation| %>
    <%= yield translation %>
  <% end %>
<% else %>
  <%= label *args %>
<% end %>
