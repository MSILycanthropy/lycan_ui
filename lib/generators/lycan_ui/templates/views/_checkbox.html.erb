<% default_classes = "appearance-none size-4 border border-accent rounded transition-all " \
                     "ease-[ease] relative cursor-pointer " \
                     "after:top-[45%] after:left-1/2 after:w-1.5 after:h-2.5 after:opacity-0 " \
                     "checked:bg-accent checked:border-transparent checked:scale-110 after:absolute " \
                     "after:border-r-2 after:border-b-2 after:border-on-accent after:-translate-x-1/2 " \
                     "after:-translate-y-1/2 after:rotate-45 after:scale-0 " \
                     "after:transition-transform after:checked:scale-100 after:checked:opacity-100 " \
                     "disabled:opacity-65 disabled:cursor-not-allowed" %>
<% options = args.third || local_assigns.except(:args) %>
<% options[:class] = class_names(default_classes, options[:class]) %>
<% args[2] = options %>

