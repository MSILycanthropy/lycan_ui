<%= tag.div(class: classes, data: { ui__accordion__item_target: :trigger, action: "ui--accordion--item#toggle" }, **opts) do %>
  <h3>
    <button type="button"
            class="flex flex-1 items-center justify-between py-4 font-medium transition-all hover:underline"
            aria-expanded="false" 
            aria-controls="<%= content_id %>" 
            id="<%= trigger_id %>">
      <%= yield %>
    </button>
  </h3>
<% end %>