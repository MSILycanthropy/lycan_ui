<% content = capture { yield } %>
<% local_assigns[:class] = class_names('block cursor-pointer', local_assigns[:class]) %>

<% if content.present? %>
  <%= button_to *local_assigns[:args], **local_assigns.except(:args) do %>
    <%= content %>
  <% end %>
<% else %>
  <%= button_to *local_assigns[:args], **local_assigns.except(:args) %>
<% end %>
