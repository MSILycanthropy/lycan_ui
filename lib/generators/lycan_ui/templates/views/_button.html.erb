<% variant_classes = select_variant({
  primary:
    "bg-primary text-on-primary hover:bg-primary/80",
  secondary:
    "bg-secondary text-on-secondary hover:bg-secondary/80 h-10 px-4 py-2",
  danger:
    "bg-danger text-on-danger hover:bg-danger/80 h-10 px-4 py-2",
  outline:
    "border border-primary hover:bg-primary hover:text-on-primary h-10 px-4 py-2",
  ghost:
    "hover:bg-secondary/30 hover:text-on-secondary h-10 px-4 py-2",
  link:
    "underline-offset-4 decoration-accent hover:underline h-10 px-4 py-2",
  none: nil
}, local_assigns[:variant]) %>
<% animation_classes = "motion-safe:transition-transform motion-safe:active:scale-95 ease-in-out" unless local_assigns[:variant]&.to_sym == :link %>
<% default_classes = "inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium " \
  "transition-colors disabled:pointer-events-none disabled:opacity-50 h-10 px-4 py-2" %>

<%= tag.button(class: class_names(default_classes, variant_classes, animation_classes, local_assigns[:class]), **local_assigns.except(:class)) do %>
  <%= yield %>
<% end %>
