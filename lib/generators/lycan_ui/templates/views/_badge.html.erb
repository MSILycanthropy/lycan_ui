<% default_classes = "inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors " \
                     "focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2" %>

<% variant_classes = select_variant({
  primary: "border-transparent bg-zinc-100 text-black hover:bg-zinc-100/80",
  secondary: "border-transparent bg-gray-600 text-white hover:bg-gray-600/80",
  outline: "text-black",
  danger: "border-transparent bg-red-600 text-white hover:bg-red-600/80"
}, local_assigns[:variant]) %>

<%= tag.div(class: class_names(default_classes, variant_classes, local_assigns[:class]), **local_assigns.except(:class)) do %>
  <%= yield %>
<% end %>
