---
title: Dropdown
component: dropdown
---
<% content_for :description do %>
  <p>
    Displays a menu to the user, which contains links or actions.
  </p>

  <div class="pt-4">
    <%= render 'partials/example', wrapper_classes: 'flex justify-center' %>
  </div>
<% end %>

<% content_for :features do %>
  <ul class="space-y-1">
    <li class="flex gap-3 items-center">
      <%= lucide_icon('check-check', class: 'text-green-600') %>

      <p>
        Supports submenus
      </p>
    </li>
    <li class="flex gap-3 items-center">
      <%= lucide_icon('check-check', class: 'text-green-600') %>

      <p>
        Customizable menu positioning
      </p>
    </li>
    <li class="flex gap-3 items-center">
      <%= lucide_icon('check-check', class: 'text-green-600') %>

      <p>
        Fully managed focus
      </p>
    </li>
    <li class="flex gap-3 items-center">
      <%= lucide_icon('check-check', class: 'text-green-600') %>

      <p>
        Full keyboard navigation
      </p>
    </li>
    <li class="flex gap-3 items-center">
      <%= lucide_icon('check-check', class: 'text-green-600') %>

      <p>
        Typeahead Support
      </p>
    </li>
  </ul>
<% end %>

<% content_for :accessibility do %>
  <p>
    Adheres to the

    <%= external_link_to 'https://www.w3.org/WAI/ARIA/apg/patterns/menubar/' do %>
      <span>Menu WAI-ARIA design pattern</span>
    <% end %>

    and

    <%= external_link_to 'https://www.w3.org/WAI/ARIA/apg/patterns/menu-button/' do %>
      <span>Menu Button WAI-ARIA design pattern</span>
    <% end %>
  </p>
<% end %>

<%= render 'partials/doc' %>
