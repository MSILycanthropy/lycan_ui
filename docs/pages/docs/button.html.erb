---
title: Button
component: button
---

<% content_for :description do %>
  <p>A button</p>

  <div class="pt-6">
    <%= render 'partials/example', wrapper_classes: 'flex justify-center' %>
  </div>
<% end %>

<% content_for :usage do %>
  <div class="space-y-3">
    <div>
      <h4 id="forms" class="text-lg scroll-m-20 pb-2">
        Usage in forms
      </h4>

      <p class="text-sm">
        To use directly with Rails forms, please see

        <%= external_link_to '/' do %>
          Installing form helpers
        <% end %>
      </p>

      <%= render 'partials/example', path: "button/form", one: true,  wrapper_classes: 'flex justify-center' %>
    </div>

    <% [:secondary, :danger, :outline, :ghost, :link, :none].each do |variant| %>
      <div>
        <h4 id="<%= variant %>" class="text-lg scroll-m-20 pb-2">
          <%= variant.to_s.titleize %>
        </h4>

        <p class="text-sm">
          Pass in <%= code('variant') %> to <%= helper_code('ui.button', 'render "ui/button"') %> with a value of <%= code(variant.to_s) %>.
        </p>

        <%= render 'partials/example', path: "button/#{variant}", wrapper_classes: 'flex justify-center' %>
      </div>
    <% end %>
  </div>
<% end %>

<% content_for :usage_links do %>
  <li>
    <a class="text-sm text-black hover:underline hover:text-black/90 transition-all" href="#form">Usage in forms</a>
  </li>

  <% [:secondary, :danger, :outline, :ghost, :link, :none].each do |variant| %>
    <li>
      <a class="text-sm text-black hover:underline hover:text-black/90 transition-all" href="#<%= variant %>"><%= variant.to_s.titleize %></a>
    </li>
  <% end %>
<% end %>

<%= render 'partials/doc' %>
